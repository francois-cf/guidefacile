name: Build & Publish

on:
  schedule:
    - cron: '23 2 * * *'   # tous les jours à 02:23 UTC
  push:
    branches: ["main"]

permissions:
  contents: write   # <-- donne le droit d'écrire/pusher

jobs:
  build:
    runs-on: ubuntu-latest
    steps:
      - name: Checkout
        uses: actions/checkout@v4
        with:
          fetch-depth: 0
          persist-credentials: true

      - name: Set up Python
        uses: actions/setup-python@v5
        with:
          python-version: '3.11'

      - name: Generate pages
        run: |
          python -m pip install --upgrade pip
          python scripts/generate.py

      - name: Commit generated pages
        uses: stefanzweifel/git-auto-commit-action@v5
        with:
          commit_message: "build: update pages"
